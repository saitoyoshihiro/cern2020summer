<tool name="jemalloc" version="5.2.1-bcolbf">
  <architecture name="slc.*|fc.*">
    <lib name="jemalloc"/>
  </architecture>
  <client>
    <environment name="JEMALLOC_BASE" default="/cvmfs/cms.cern.ch/slc7_amd64_gcc820/external/jemalloc/5.2.1-bcolbf"/>
    <environment name="LIBDIR"        default="$JEMALLOC_BASE/lib"/>
    <environment name="INCLUDE"        default="$JEMALLOC_BASE/include"/>
  </client>
  <runtime name="ROOT_INCLUDE_PATH" value="$INCLUDE" type="path"/>
  <use name="root_cxxdefaults"/>
</tool>
